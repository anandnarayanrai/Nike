<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="10dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@color/colorText"/>

            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvTopPerformer"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/common_txt_style"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    app:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_height="25dp"
                    android:text="Top performer"/>
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/common_txt_style"
                    android:textSize="8sp"
                    android:textColor="@color/colorLightBlack"
                    android:text="1 hour ago"/>
            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    app:layout_constraintTop_toBottomOf="@+id/tvTopPerformer"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/common_txt_style"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Congrats! RON!"/>


            <RelativeLayout
                    android:id="@+id/layoutText"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvName"
                    app:layout_constraintStart_toStartOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivIcon"
                        android:layout_width="80dp"
                        android:layout_gravity="start"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_image3"
                        android:layout_margin="4dp"
                        app:srcCompat="@mipmap/ic_launcher"/>

                <android.support.v7.widget.AppCompatTextView
                        style="@style/common_txt_style"
                        android:layout_toEndOf="@+id/ivIcon"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="6dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="You are the currently the leading Bill Master of the Day."/>
                <android.support.v7.widget.AppCompatTextView
                        style="@style/common_txt_style"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/colorLightBlack"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@+id/ivIcon"
                        android:text="Keep up the pace sport.\nBest Wishes"/>

            </RelativeLayout>

            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/colorLightBlack"/>

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tvDivider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/common_txt_style"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_nike"
                        android:textSize="9sp"
                        android:textColor="@color/colorLightBlack"
                        android:text="Like"/>
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/common_txt_style"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_support"
                        android:textSize="9sp"
                        android:textColor="@color/colorLightBlack"
                        android:text="Message"/>

                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_info"
                        style="@style/common_txt_style"
                        android:textSize="9sp"
                        android:textColor="@color/colorLightBlack"
                        android:text="Info"/>

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>